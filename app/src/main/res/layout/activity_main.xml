<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.priyankatummala.mathquiz.MainActivity"
    android:orientation="vertical">

    <TextView
        android:textSize ="20sp"
        android:text="Select an operation to begin quiz!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <Button
        android:textSize ="20sp"
        android:text="Multiplication"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/multiply_button"
        android:backgroundTint="#FF63A8FB"
        android:layout_marginTop="50sp"
        android:layout_below="@+id/subtract_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Subtraction"
        android:textSize ="20sp"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/subtract_button"
        android:backgroundTint="#FF63A8FB"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Addition"
        android:textSize ="20sp"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        android:elevation="0dp"
        android:backgroundTint="#FF63A8FB"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/subtract_button"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
